func findMax(nums []int) int {
	var idx = 0
	for i := 0; i < len(nums); i++ {
		if nums[i] > nums[idx] {
			idx = i
		}
	}
	return idx
}

func normVals(nums []int) []float64 {
	var l = len(nums)
	var sum = 0
	for i := 0; i < l; i++ {
		sum += nums[i]
	}
	result := make([]float64, l)
	if sum == 0 {
		for i := 0; i < l; i++ {
			result[i] = float64(1) / float64(l)
		}
	} else {
		for i := 0; i < l; i++ {
			result[i] = float64(nums[i]) / float64(sum)
		}
	}
	return result
}

